<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_main"
    android:layout_width="120dp"
    android:layout_height="150dp"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_glass"
            android:layout_width="100dp"
            android:layout_height="39dp"
            android:src="@drawable/sp_one" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:weightSum="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="XSTYL"
                android:textAllCaps="true"
                android:textColor="#0b0d0e"
                android:textSize="8sp"
                android:layout_weight="0.6"/>
            <ImageView
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:src="@drawable/ic_nav_heart"
                android:layout_weight="0.5"/>
        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Rs.990"
            android:textAllCaps="false"
            android:textColor="#045394"
            android:textSize="9sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Including basic lenses"
            android:textAllCaps="true"
            android:textColor="#303030"
            android:textSize="5sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:weightSum="1"
            android:gravity="center"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:background="@drawable/circle_drawable_blue_solid"
                android:layout_margin="5dp">
            </LinearLayout>
            <LinearLayout
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:background="@drawable/circle_drawable_brown_solid"
                android:layout_margin="5dp">
            </LinearLayout>
            <LinearLayout
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:background="@drawable/circle_drawable_blue_solid"
                android:layout_margin="5dp">
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>