<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_main"
    android:layout_width="160dp"
    android:layout_height="205dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:elevation="5dp"
    android:layout_margin="7dp">

    <LinearLayout
        android:id="@+id/ll_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_glass"
            android:layout_width="131dp"
            android:layout_height="49dp"
            android:src="@drawable/sp_one" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="XSTYL"
            android:textAllCaps="true"
            android:textColor="#0b0d0e"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Rs.990"
            android:textAllCaps="true"
            android:textColor="#045394"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Including basic lenses"
            android:textAllCaps="true"
            android:textColor="#303030"
            android:textSize="10sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:weightSum="1"
            android:gravity="center"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/circle_drawable_blue_solid"
                android:layout_margin="5dp">
            </LinearLayout>
            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/circle_drawable_brown_solid"
                android:layout_margin="5dp">
            </LinearLayout>
            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/circle_drawable_blue_solid"
                android:layout_margin="5dp">
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:weightSum="1">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="17dp"
            android:src="@drawable/ic_cart_black"
            android:layout_weight="0.5"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="17dp"
            android:src="@drawable/ic_nav_heart"
            android:layout_weight="0.5"/>
    </LinearLayout>


</RelativeLayout>